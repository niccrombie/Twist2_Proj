<form action="/catalog/School/{{_id}}/update" method="POST">
	<input name="_id" type="hidden" id="_id" value={{_id}}>
	<label for="hs_id">School Code:</label><br>
	<input name="hs_id" type="number" id="hs_id" value="{{hs_id}}">
	<br><br>
	<label for="hsName">School Name:</label><br>
	<input name="hsName" type="text" id="hsName" value="{{hsName}}">
	<br><br>
	<input type="submit" value="Update School"><br>
</form>
	{{#if errors}}
    {{#each errors}}
	<p>{{this.msg}}</p>
	{{/each}}
	{{/if}}